@page
@model FreeSpace.Pages.Posts.IndexModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<FreeSpace.Models.ApplicationUser> SignInManager
@inject UserManager<FreeSpace.Models.ApplicationUser> UserManager
@Html.AntiForgeryToken()
@{
    ViewData["Title"] = "Index";
}

<form method="post" enctype="multipart/form-data">

    <div class="row mb-1">
        <div class="col-6">
            <div class="d-flex gap-2 mb-1">
                <label asp-for="Post.Title" class="control-label me-3"></label>
                <input asp-for="Post.Title" class="form-control form-control-sm" type="text"/>
            </div>
                <span asp-validation-for="Post.Title" class="text-danger"></span>
        </div>
        <div>
            <div class="mb-1">
                <label asp-for="Post.Description" class="control-label mb-2"></label>
                <textarea asp-for="Post.Description" class="form-control form-control" rows="5" type="text"></textarea>
            </div>
                <span asp-validation-for="Post.Description" class="text-danger"></span>
        </div>
        
        <div class="mb-2">
            <label asp-for="Post.Media" class="form-label"></label>
            <input asp-for="Post.Media" class="form-control form-control-sm" type="file" id="formFile">
        </div>
    </div>


    <div>
        <button type="submit" class="button-send mt-2">Postar</button>
    </div>

</form>

<hr class="hr"/>

@foreach(var i in Model.Posts)
{
    <div>
        <div class="d-flex gap-2 mb-2">
            <a class="text-decoration-none" asp-page="./Profile" asp-route-id="@i.UserId">
                <img src="@(!string.IsNullOrEmpty(i.User.PhotoPath) ? i.User.PhotoPath : "/userDefault.jpg")" alt="Image" class="rounded-circle me-2" style="max-width: 50px; max-height: 50px;"/>
            </a>

            <p><small><b>@i.User?.UserName</b></small></p>


            @if(i.CreatedDate.Date == DateTime.Today)
            {
                <div  class="col text-end">
                    <p><small>@i.CreatedDate.ToString("HH:mm")</small></P>
                </div>

            }
            else
            {   
                <div  class="col text-end text-muted">
                    <p><small>@i.CreatedDate.ToString("dd/MM/yy")</small></p>
                </div>

            }

        </div>
        <div class="fw-bold mb-2 fs-4">
            @Html.DisplayFor(p => i.Title)
        </div> 
        <div class="mb-3 fs-6">
            @Html.DisplayFor(p => i.Description)
        </div>
        @if(i.MediaPath != null)
        {
            var ext = System.IO.Path.GetExtension(i.MediaPath).ToLower();
            if (ext == ".jpg" || ext == ".jpeg" || ext == ".png" || ext == ".gif")
            {
                <div class="mb-3 d-flex justify-content-center align-items-center min-vh-10 bg-post img-fluid rounded-4">
                    <img src="@i.MediaPath" alt="Image" class="img-fluid rounded-3" style=" object-fit: contain; max-width: 650px; max-height: 600px; " />
                </div>
            }
            else if (ext == ".mp4" || ext == ".webm" || ext == ".ogg")
            {
                <div class="mb-3 d-flex justify-content-center align-items-center min-vh-10 bg-post img-fluid rounded-4">
                    <video controls width="650" height="600">
                        <source src="@i.MediaPath" type="video/mp4"/>
                     </video>
                </div>
            }
        }

        <div class="d-flex gap-2 mb-2 align-items-center">
            <form method="post" asp-page-handler="Like" asp-route-id="@i.Id">
                <button id="likeBtn" type="submit" class="btn p-0 border-0 bg-transparent">
                    <img src="/imgsLayout/heart-empty.png" style="width:25px; height:25px;" />
                </button>
            </form>
            <span class="">@i.Likes</span>
                <button id="commentBtn" type="button" onclick="toggleComment(@i.Id)" class="btn ms-3 p-0 border-0 bg-transparent">
                    <img src="/imgsLayout/CommentWhite.png" style="width:25px; height:25px;" />
                </button>
            @if(i.UserId == UserManager.GetUserId(User))
            {
                <div class="col text-end">
                    <form method="post" asp-page-handler="Delete" asp-route-id="@i.Id">
                        <input type="submit" value="Excluir" class="btn-sm btn-danger btn-sm"/>
                    </form> 
                </div>
            }

        </div>
                <div id="commentBox-@i.Id" style="display:none;" class="mt-3">

                @if (i.Comments != null && i.Comments.Any())
                {
                    @foreach (var c in i.Comments.OrderByDescending(c => c.CreatedDate))
                    {
                        <div class="mb-2">
                            <a class="text-decoration-none" asp-page="./Profile" asp-route-id="@i.UserId">
                                <img src="@(!string.IsNullOrEmpty(c.User.PhotoPath) ? c.User.PhotoPath : "/userDefault.jpg")" alt="Image" class="rounded-circle me-2" style="max-width: 50px; max-height: 50px;"/>
                            </a>
                            <span>@c.User?.UserName</span>
                            <div class="mt-2">@c.Text</div>
                            <small class="text-muted">@c.CreatedDate.ToString("g")</small>
                            <hr />
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">Sem comentários</p>
                }
                    
                    <form method="post" asp-page-handler="AddComment" asp-route-PostId="@i.Id">
                        <textarea name="commentText" maxlength="300" style="resize:none; width:600px;" class="form-control col-3" rows="5" placeholder="Escreva seu comentário..."></textarea>
                        <button type="submit" class="button-send mt-3">Enviar</button>
                    </form>
                </div>

        </div>


    <hr class="hr"/>
}

                        
<script>
    function toggleComment(postId) {
        const box = document.getElementById("commentBox-" + postId);
        box.style.display = box.style.display === "none" ? "block" : "none";
    }
</script>
